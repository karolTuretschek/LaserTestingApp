            </StackPanel>
            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                <Image Source="C:\Users\venqu\OneDrive\Dokumenty\Honours\LaserTestingApp\LaserTestingApp\Images\OrangeLineLabel.png" Width="30" HorizontalAlignment="Left"/>
                <Label x:Name ="OrangeLineLabel" Width="120" Height="25" Content="Unit Temperature" Margin="0,0,0,0" FontSize="11"/>
