<Window x:Class="LaserTestingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:oxy1="clr-namespace:OxyPlot.Series;assembly=OxyPlot"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserTestingApp" 
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1300">
    <Grid>
        <Button x:Name ="LoadDataButton" Content="Load Data" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoadDataButton_Click" Margin="128,654,0,0"/>
        <DataGrid x:Name ="LaserDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="10,10,842,331" SelectionChanged="LaserDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time"  Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Ambient Temp" Binding="{Binding AmbientTemp}" />
                <DataGridTextColumn Header="Unit Temp" Binding="{Binding UnitTemp}" />
                <DataGridTextColumn Header="Divergence" Binding="{Binding Divergence}" />
                <DataGridTextColumn Header="Power Output" Binding="{Binding PowerOutput}" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Margin="612,12,21,182">
            <TabItem x:Name="TestChart" Header="Test Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel}"/>
                    <Frame Content="Frame" Navigated="Frame_Navigated"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="ScatterChart" Header="Scatter Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel2}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Height="25" Margin="650,564,33,0" VerticalAlignment="Top">
            <CheckBox x:Name="RadioTime" Content="Time" FontWeight="Bold" Margin="0,4,516,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="RadioAmbientTemp" Content="Ambient Temp" FontWeight="Bold" Margin="86,7,427,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="RadioUnitTemp" Content="Unit Temp&#xA;" FontWeight="Bold" Margin="218,7,298,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="RadioDivergence" Content="Divergence&#xA;" FontWeight="Bold" Margin="332,8,184,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="RadioPowerOutput" Content="Power Output&#xA;" FontWeight="Bold" Margin="447,7,69,0" VerticalAlignment="Center"/>
        </Grid>
        <ComboBox x:Name="ComboBoxY" SelectedValuePath="Content" HorizontalAlignment="Left" Margin="487,156,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxY_SelectionChanged">
            <ComboBoxItem Content="Time"></ComboBoxItem>
            <ComboBoxItem Content="Ambient Temp"></ComboBoxItem>
            <ComboBoxItem Content="Unit Temp"></ComboBoxItem>
            <ComboBoxItem Content="Divergence"></ComboBoxItem>
            <ComboBoxItem Content="PowerOutput"></ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="ComboBoxX" SelectedValuePath="Content" HorizontalAlignment="Left" Margin="753,616,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxX_SelectionChanged">
            <ComboBoxItem Content="Time"></ComboBoxItem>
            <ComboBoxItem Content="Ambient Temp"></ComboBoxItem>
            <ComboBoxItem Content="Unit Temp"></ComboBoxItem>
            <ComboBoxItem Content="Divergence"></ComboBoxItem>
            <ComboBoxItem Content="PowerOutput"></ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>