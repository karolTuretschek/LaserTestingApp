<Window x:Class="LaserTestingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:oxy1="clr-namespace:OxyPlot.Series;assembly=OxyPlot"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserTestingApp" 
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1700">
    <Grid x:Name="MainGrid" Margin="0,0,0,5">
        <Button x:Name="ImportDataButton" Content="Import" HorizontalAlignment="Left" Margin="39,864,0,0" VerticalAlignment="Top" Width="74" Click="ImportDataButton_Click"/>
        <TextBox x:Name="filePathTextBox" HorizontalAlignment="Left" Margin="135,866,0,0" VerticalAlignment="Top" Width="400" IsReadOnly="True" TextChanged="filePathTextBox_TextChanged"/>

        <Button x:Name ="ResetButton" Content="Reset Data" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ResetDataButton_Click" Margin="52,584,0,0"/>
        <TabControl Margin="190,10,21,95" MinHeight="2" MaxHeight="1000">
            <TabItem x:Name="Data" Header="Data Grid">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name ="DataTab" ItemsSource="{Binding}" AutoGenerateColumns="False" Width="Auto" Margin="10,10,86,10" MinHeight="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time"  Binding="{Binding Time}"/>
                            <DataGridTextColumn Header="Ambient Temp" Binding="{Binding AmbientTemp}" />
                            <DataGridTextColumn Header="Unit Temp" Binding="{Binding UnitTemp}" />
                            <DataGridTextColumn Header="Divergence" Binding="{Binding Divergence}" />
                            <DataGridTextColumn Header="Power Output" Binding="{Binding PowerOutput}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="LineChart" Header="Line Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel}"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="ScatterChart" Header="Scatter Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel2}"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="FastChart" Header="Fast Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel3}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Vertical" Margin="10,10,1515,431" MinHeight="2" MaxHeight="1000" >
            <Label x:Name="AxiesLabel" Content="Axies" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,0,0" FontSize="16"/>
            <Separator HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,5,0,5"/>
            <Label x:Name="AxiesYLabel" Content="Y:" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ComboBoxY" SelectedValuePath="Content" Width="120"  SelectionChanged="ComboBoxY_SelectionChanged">
                <ComboBoxItem Content="Time"/>
                <ComboBoxItem Content="Ambient Temp"/>
                <ComboBoxItem Content="Unit Temp"/>
                <ComboBoxItem Content="Divergence"/>
                <ComboBoxItem Content="PowerOutput"/>
            </ComboBox>
            <ComboBox x:Name="ComboBoxY2" SelectedValuePath="Content" Width="120" SelectionChanged="ComboBoxY2_SelectionChanged">
                <ComboBoxItem Content="Time"/>
                <ComboBoxItem Content="Ambient Temp"/>
                <ComboBoxItem Content="Unit Temp"/>
                <ComboBoxItem Content="Divergence"/>
                <ComboBoxItem Content="PowerOutput"/>
            </ComboBox>
            <Label x:Name="AxiesXLabel" Content="X:" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ComboBoxX" SelectedValuePath="Content" Width="120" SelectionChanged="ComboBoxX_SelectionChanged">
                <ComboBoxItem Content="Time"/>
                <ComboBoxItem Content="Ambient Temp"/>
                <ComboBoxItem Content="Unit Temp"/>
                <ComboBoxItem Content="Divergence"/>
                <ComboBoxItem Content="PowerOutput"/>
            </ComboBox>
            <Button x:Name ="LoadDataButton" Content="Create Graphs" Width="120" IsEnabled="false" Click="LoadDataButton_Click" FontSize="16" FontWeight="Bold" VerticalContentAlignment="Center" Margin="0,75,0,5"/>
        </StackPanel>
        <Slider x:Name="DotSizeSlider" HorizontalAlignment="Left" Margin="18,674,0,0" VerticalAlignment="Top" Width="150"
                SmallChange="1" LargeChange="5" Value="3" Minimum="3" Maximum="30" TickFrequency="10" ValueChanged="DotSizeSlider_ValueChanged"/>
        <TextBlock x:Name="LoadingTextBlock" TextAlignment="Center" Margin="528,10,0,182" TextWrapping="Wrap" IsEnabled="False" Visibility="Visible" Text="Choose Y and X axies" Width="1151" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
    </Grid>
</Window>