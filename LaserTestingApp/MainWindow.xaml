<Window x:Class="LaserTestingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:oxy1="clr-namespace:OxyPlot.Series;assembly=OxyPlot"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserTestingApp" 
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1300">
    <Grid>
        <Button x:Name ="LoadDataButton" Content="Load Data" HorizontalAlignment="Left" Margin="128,646,0,0" VerticalAlignment="Top" Click="LoadDataButton_Click"/>
        <DataGrid x:Name ="LaserDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="10,10,842,331" SelectionChanged="LaserDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time"  Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Ambient Temp" Binding="{Binding AmbientTemp}" />
                <DataGridTextColumn Header="Unit Temp" Binding="{Binding UnitTemp}" />
                <DataGridTextColumn Header="Divergence" Binding="{Binding Divergence}" />
                <DataGridTextColumn Header="Power Output" Binding="{Binding PowerOutput}" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Margin="546,41,87,153">
            <TabItem x:Name="TestChart" Header="Test Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel}"/>
                    <Frame Content="Frame" Navigated="Frame_Navigated"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="ScatterChart" Header="Scatter Chart">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView Model="{Binding MyModel2}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Border BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</Window>